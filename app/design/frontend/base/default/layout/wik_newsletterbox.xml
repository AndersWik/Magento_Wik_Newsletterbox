            <action method="addItem" ifconfig="newsletterbox/newsletterbox_group/newsletterbox_jquery">
                <type>skin_js</type>
                <name>jquery/jquery-2.1.3.min.js</name>
            </action>
            <action method="addItem" ifconfig="newsletterbox/newsletterbox_group/newsletterbox_jquery">
