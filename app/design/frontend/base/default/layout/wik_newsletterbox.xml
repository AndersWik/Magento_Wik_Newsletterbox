                <name>jquery/noconflict.js</name>
            </action>
            <action method="addItem" ifconfig="newsletterbox/newsletterbox_group/newsletterbox_cookie">
                <type>skin_js</type>
                <script>jquery/jquery.cookie.js</script>
            </action>
            <action method="addItem" ifconfig="newsletterbox/newsletterbox_group/newsletterbox_colorbox">
                <type>skin_js</type>
                <name>jquery/jquery.colorbox-min.js</name>
            </action>
            <action method="addItem" ifconfig="newsletterbox/newsletterbox_group/newsletterbox_colorbox">
